##### AUDIO CONTROL ######################################################


# Pulse Audio controls
    # increase sound volume
    bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 5%+ && pkill -RTMIN+10 i3block
    # decrease sound volume
    bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 5%- && pkill -RTMIN+10 i3block
    # mute sound
    bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle && pkill -RTMIN+10 i3block

    # start the player
    bindsym XF86AudioPlay exec --no-startup-id player_control play && pkill -RTMIN+10 i3block
    # pause the player
    bindsym XF86AudioPause exec --no-startup-id player_control pause && pkill -RTMIN+10 i3block
    # previous track
    bindsym XF86AudioPrev exec --no-startup-id player_control prev && pkill -RTMIN+10 i3block
    # next track
    bindsym XF86AudioNext exec --no-startup-id player_control next && pkill -RTMIN+10 i3block

# For keyboards without Audio keys
# Press $mod+Shift+a to enter alsamixer mode
mode "$mode_audio" {
    bindsym m exec --no-startup-id "amixer sset Master toggle && pkill -RTMIN+10 i3block"

    bindsym Up exec --no-startup-id "amixer sset Master 2%+ && pkill -RTMIN+10 i3block"
    bindsym Down exec --no-startup-id "amixer sset Master 2%- && pkill -RTMIN+10 i3block"
    bindsym k exec --no-startup-id "amixer sset Master 2%+ && pkill -RTMIN+10 i3block"
    bindsym j exec --no-startup-id "amixer sset Master 2%- && pkill -RTMIN+10 i3block"

    bindsym l exec --no-startup-id "player_control next && pkill -RTMIN+10 i3block", mode "default"
    bindsym h exec --no-startup-id "player_control prev && pkill -RTMIN+10 i3block", mode "default"
    bindsym Shift+l exec --no-startup-id "player_control next && pkill -RTMIN+10 i3block"
    bindsym Shift+h exec --no-startup-id "player_control prev && pkill -RTMIN+10 i3block"
    bindsym space exec --no-startup-id "player_control toggle && pkill -RTMIN+10 i3block", mode "default"
    bindsym r exec --no-startup-id "mpc random && pkill -RTMIN+10 i3block", mode "default"
    bindsym s exec --no-startup-id "mpc single && pkill -RTMIN+10 i3block", mode "default"
    bindsym p exec --no-startup-id "mpc repeat && pkill -RTMIN+10 i3block", mode "default"

    bindsym q      mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

set $mode_audio Audio Control: Mute[m]  +[Up|k] -[Down|j] Play-Pause[Space] Next[l] Previous[h] Single[s] Repeat[r] Loop[p]
bindsym $mod+a mode "$mode_audio"



