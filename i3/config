# Press $mod+o to enter launch mode
mode "$mode_launcher" {

    bindsym f exec "firefox"
    bindsym t exec "thunderbird"
    bindsym e exec "telegram-desktop"
    bindsym r exec "riot-desktop"
    bindsym s exec "slack"
    bindsym g exec "google-chrome"
    bindsym s exec "spotify"
    bindsym c exec "code"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

set $mode_launcher Launch: [f]irefox [t]hunderbird [r]iot t[e]legram [g]oogle-chrome [s]potify [c]ode [s]lack
bindsym $mod+o mode "$mode_launcher"


