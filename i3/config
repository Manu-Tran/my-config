##### AUDIO CONTROL ######################################################


# Pulse Audio controls
    # increase sound volume
    bindsym XF86AudioRaiseVolume exec amixer set Master 5%+ && pkill -RTMIN+10 i3block
    # decrease sound volume
    bindsym XF86AudioLowerVolume exec amixer set Master 5%- && pkill -RTMIN+10 i3block
    # mute sound
    bindsym XF86AudioMute exec amixer set Master toggle && pkill -RTMIN+10 i3block

# For keyboards without Audio keys
# Press $mod+Shift+a to enter alsamixer mode
mode "$mode_audio" {
    bindsym m exec "amixer sset Master mute && pkill -RTMIN+10 i3block"
    bindsym u exec "amixer sset Master unmute && pkill -RTMIN+10 i3block"

    bindsym Up exec "amixer sset Master 5%+ && pkill -RTMIN+10 i3block"
    bindsym Down exec "amixer sset Master 5%- && pkill -RTMIN+10 i3block"
    bindsym k exec "amixer sset Master 5%+ && pkill -RTMIN+10 i3block"
    bindsym j exec "amixer sset Master 5%- && pkill -RTMIN+10 i3block"

    bindsym l exec "player_control next"
    bindsym h exec "player_control previous"
    bindsum space exec "player_control playpause"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

set $mode_audio Audio Control: [m]ute [u]nmute [Up] [Down]
bindsym $mod+Shift+a mode "$mode_audio"



##### SCREEN CONTROL ######################################################


# Sreen brightness controls

# increase screen brightness
bindsym XF86MonBrightnessUp exec light -A 5 && pkill -RTMIN+11 i3block
# decrease screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 && pkill -RTMIN+11 i3block


